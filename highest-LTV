-- To find the 5 customers with the highest lifetime value in the top 10 cities
Select A.customer_id,
        SUM(A.amount) AS total_amount_paid,
        B.first_name,
        B.last_name,
        D.city,
        E.country
FROM payment A
INNER JOIN customer B ON A.customer_id = B.customer_id
INNER JOIN address C ON B.address_id = B.address_id
INNER JOIN city D ON C.city_id = D.city_id
INNER JOIN country E ON D.country_id = E.country_id
WHERE city IN ( 'Arora' , 'London' , 'Kitwe' , 'Adoni' , 'Dhule (Dhulia)' , 'Xintai' , 'Sivas' , 'Mahajanga' , 
'Nezahualcyotl' , 'Escobar' )
GROUP BY A.customer_id, B.first_name, B.last_name, D.city, E.country
ORDER BY SUM(A.amount) DESC
LIMIT 5
